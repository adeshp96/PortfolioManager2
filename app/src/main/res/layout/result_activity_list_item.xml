<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/element_result_list"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/local_purpose"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dip"
        android:textSize="32dip"
        android:textStyle="bold"
        />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/local_horizon"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border">
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:text="Systematic Investment Plan"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip"
            android:textSize="22dip"
            android:textStyle="bold" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/local_sip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip"
            android:textSize="16dip"
             />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/sip_local_total_deposits"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip"
            android:textSize="16dip"
             />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/sip_local_total_return"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip"
            android:textSize="16dip"
             />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/sip_local_maturity_amount"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip"
            android:textSize="16dip"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border">
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:text="One Time Investment Plan"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip"
            android:textSize="22dip"
            android:textStyle="bold" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/local_lumpsum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip"
            android:textSize="16dip"
             />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ota_local_total_return"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip"
            android:textSize="16dip"
             />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ota_local_maturity_amount"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dip"
            android:textSize="16dip"
            android:textStyle="bold" />

    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:text="MUTUAL FUNDS IN PORTFOLIO :"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dip"
        android:textSize="16dip"
        android:textStyle="bold" />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/local_mf1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dip"
        android:textSize="16dip"
        />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/local_mf2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dip"
        android:textSize="16dip"
         />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/local_mf3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dip"
        android:textSize="16dip"
         />

</LinearLayout>


</LinearLayout>